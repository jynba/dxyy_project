/*  #6BC5D2 #A5E9DB 769FCD F2A379 #90A4Ae
  * header
*/
.header {
    align-items: center;
    height: auto;
    overflow: hidden;
    width: 750rpx;
    position: relative;
}

.header .background {
    top: -130rpx;
    height: auto;
    left: -100rpx;
    width: 1000rpx;
    position: relative;
    z-index: -99;
    transform: rotate(-8deg);
    background: #689bda;
}

.bg {
    height: 360rpx;
    left: -100rpx;
    position: absolute;
    top: -100rpx;
    transform: rotate(-8deg);
    width: 1000rpx;
    z-index: -99;
}

