.username {
    position: absolute;
    top: 42%;
    left: 80rpx;
    width: 350rpx;
    height: 70rpx;
    font-size: 60rpx;
    font-weight: 700;
    color: #fff;
}

.icon {
    position: absolute;
    top: 40%;
    right: 40%;
}

.title_icon {
    position: absolute;
    margin-left: 5rpx;
    width: 180rpx;
    height: 180rpx;
    border: 8rpx solid hsla(0, 0%, 100%, .6);
    border-radius: 50%;
    background-color: #fff;
    padding: 0;
    /*修改button的默认*/
    box-sizing: content-box;
    /*修改button的默认*/
}

.circle_icon {
    animation: ani 6s linear infinite;
    position: absolute;
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    background: hsla(0, 0%, 100%, .3);
}

/* 取消button的边框 */
button::after {
    border: none;
}

@keyframes ani {
    0% {
        opacity: .5;
        transform: scale(1);
    }

    100% {
        opacity: 0;
        transform: scale(3);
    }
}

/* 我参与的活动 我发起的活动 */
.myCard {
    width: 100%;
    display: flex;
    justify-content: space-evenly;
}

.cardClass {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 43%;
    height: 150rpx;
    margin-bottom: 20rpx;
    padding: 20rpx;
    background-color: #fff;
    box-shadow: 6rpx 6rpx 8rpx rgba(200, 206, 208, 0.6);
    border-radius: 20rpx;
    box-sizing: border-box;
}

.cardClass image,
.otherInfo image {
    width: 50rpx;
    height: 50rpx;
}

/* 其他信息 */
.otherInfo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
    /* width: 100%; */
    padding: 0 20rpx;
    margin: 20rpx;
    background-color: #fff;
    box-shadow: 6rpx 6rpx 8rpx rgba(200, 206, 208, 0.6);
    border-radius: 20rpx;
    box-sizing: border-box;
}

.help,
.about,
.share,
.ask {
    position: relative;
    display: flex ;
    /* justify-content: center; */
    align-items: center;
    padding: 50rpx 30rpx ;
}
button{
    position: relative;
    display: flex ;
    /* justify-content: center; */
    align-items: center;
    background:none;
    font-size: 16px;
    line-height: normal;
    padding: 0;
    margin: 0;
    width: 100%;
}

.otherInfo .text {
    padding-left: 30rpx;
}

.arrow {
