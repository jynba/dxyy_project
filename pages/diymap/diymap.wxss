#wrap {
    width: 100vw;
    height: calc(100vh - 1px);
}

#wrap #content {
    padding: 0 25rpx;
    padding-top: 80rpx;
    padding-bottom: 60rpx;
    background: linear-gradient(rgba(46, 49, 146, .15) 0%, rgba(249, 249, 255, .01) 80%, rgba(0, 0, 0, 0) 100%);
}
/* mode */
.mode {
    margin-bottom: 50rpx;
    position: relative;
}

/* search */
.search {
    margin-bottom: 50rpx;
    position: relative;
}

.search>.mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 999;
}

.search>.ipt {
    margin-top: 20rpx;
    border: 5rpx solid #778;
    border-radius: 20rpx;
    height: 50rpx;
    padding: 0 20rpx;
    padding-right: 90rpx;
    position: relative;
    overflow: hidden;
    z-index: 999;
}

.ipt input {
    width: 100%;
    height: 50rpx;
    font-size: 27rpx;
    color: #555;
}

.ipt .delect {
    position: absolute;
    right: 0;
    top: 0;
    width: 70rpx;
    height: 50rpx;
    background: #778;
}

.ipt .delect .img {
    width: 50rpx;
    height: 50rpx;
    margin: auto;
}

.ipt .delect .img image {
    width: 100%;
    height: 100%;
    transform: scaleX(-1);
}

.search > .suggestion{
    width: 100%;
    height: 480rpx;
    background: #fff;
    box-shadow: 0 0 3px 2px rgba(24,24,25,.1);
    border-radius: 20rpx;
    position: absolute;
    z-index: 9999;
    left: 0;
    bottom: -490rpx;
  }
.search > .suggestion .content{
    padding: 10rpx;
    overflow: visible;
  }
  .search > .suggestion .content .item{
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
  }
  .search > .suggestion .content .item .title{
    font-style: normal;
    font-size: 28rpx;
    color: #555;
  }
  .search > .suggestion .content .item .dis{
    font-size: 23rpx;
    color: #999;
  }
  .search > .suggestion .content .more{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 25rpx;
    color: #999;
    text-align: center;
  }

/* map */
.maptype {
    margin-top: 50rpx;
    width: calc(100vw - 50rpx);
    height: calc(100vh - 500rpx);
    /* min-height: calc(100vw - 130rpx); */
    border-radius: 20rpx;
    padding: 5rpx;
    border: 5rpx solid #778;
    box-sizing: border-box;
    overflow: hidden;
    margin-bottom: 40rpx;
    position: relative;
}

.content {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.maptype>.content map {
    width: 100%;
    height: 100%;
}

.activity {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 90rpx;
    height: 350rpx;
    right: 5%;
    bottom: 6%;
}

.randPos {
    display: flex;
    height: 70rpx;
    width: 70rpx;
    border-radius: 50%;
    z-index: 999;
    background: none;
}

.choosePos {
    height: 50rpx;
    width: 50rpx;
    display: flex;
    border-radius: 50%;
    z-index: 999;
    background: none;
}

.controls {
    background-color: #fff;
    border-radius: 20rpx;
    font-size: 24rpx;
    z-index: 999;
}

.aim {
    height: 50rpx;
    width: 50rpx;
    display: flex;
    border-radius: 50%;
    z-index: 999;
    background: none;
}

.switch {
    height: 50rpx;
    width: 50rpx;
    display: flex;
    border-radius: 50%;
    z-index: 999;
    background: none;
}
