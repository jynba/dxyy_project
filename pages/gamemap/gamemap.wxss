#wrap {
    width: 100vw;
    height: calc(100vh - 1px);
}

#wrap #content {
    padding: 0 25rpx;
    padding-top: 80rpx;
    padding-bottom: 60px;
    background: linear-gradient(rgba(46, 49, 146, .15) 0%, rgba(249, 249, 255, .01) 80%, rgba(0, 0, 0, 0) 100%);
}



/* map */
.maptype {
    width: calc(100vw - 50rpx);
    height: calc(100vh - 250rpx);
    /* min-height: calc(100vw - 130rpx); */
    border-radius: 20rpx;
    padding: 5rpx;
    border: 5rpx solid #778;
    box-sizing: border-box;
    overflow: hidden;
    margin-bottom: 40rpx;
    position: relative;
}

.content {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.maptype>.content map {
    width: 100%;
    height: 100%;
}

.activity {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 90rpx;
    height: 350rpx;
    right: 5%;
    bottom: 6%;
}

.randPos {
    display: flex;
    height: 70rpx;
    width: 70rpx;
    border-radius: 50%;
    z-index: 999;
    background: none;
}

.choosePos {
    height: 50rpx;
    width: 50rpx;
    display: flex;
    border-radius: 50%;
    z-index: 999;
    background: none;
}

.controls {
    background-color: #fff;
    border-radius: 20rpx;
    font-size: 24rpx;
    z-index: 999;
}

.aim {
    height: 50rpx;
    width: 50rpx;
    display: flex;
    border-radius: 50%;
    z-index: 999;
    background: none;
}

.switch {
    height: 50rpx;
    width: 50rpx;
    display: flex;
    border-radius: 50%;
    z-index: 999;
    background: none;
}

/* 游戏模式和地点提示 */
.topTitle {
    /* display: flex; */
    position: relative;
    /*给地点提示做定位用*/
}

/* 右上角的地点提示 */
.checkdetail {
    position: absolute;
    top: -60rpx;
    right: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 130rpx;
    font-size: 30rpx;
}

/* 排行榜 */
.ranking {
    position: absolute;
    top: -60rpx;
    right: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 130rpx;
    font-size: 30rpx;
}
.checkdetail image,
.ranking image {
    width: 60rpx;
    height: 60rpx;
}

/* 公里数 时间 */
.lenmessage {
    background-color: #fff;
    border-radius: 5rpx;
    font-size: 24rpx;
    left: 10rpx;
    margin-top: 5rpx;
    padding: 16rpx;
    top: 15rpx;
}


/* 弹出框 */
.middlecontent {
    margin-top: 20rpx;
}

.pointTip {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10rpx;
}

.pointTip .dot {
    margin: 0 40rpx;
    font-size: 40rpx;
}

.pointTip .box {
    max-width: 400rpx;
}

.pointTip image {
    vertical-align: middle;
}

.pointTip .showpic {
    width: 50rpx;
    height: 50rpx;
}

.pointTip .finish {
    position: absolute;
    right: 50rpx;
    margin-left: 30rpx;
    width: 50rpx;
    height: 50rpx;
}