/* 页面背景颜色 */
page{
    background: linear-gradient(180deg, #fbfbfc 0%, #eef4fc 100%);
}
/* 一个活动 */
.myJoinItem{
    position: relative;
    border-left: 1px solid rgba(228, 228, 228, 0.651);
    margin:30rpx 0 30rpx 30rpx;
}
.dot{
    position: absolute;
    top: 10rpx;
    left: -10rpx;
    width: 20rpx;
    height: 20rpx;
    background-color: #689bda;
    border-radius: 50%;
}
.dateTime{
    margin-left: 60rpx;
}
.card{
    margin: 20rpx 40rpx 0;
    padding: 10rpx;
    height: 500rpx;
    background-color: #fff;
    box-shadow:  0rpx 0rpx 30rpx rgba(200, 206, 208, 0.623);
    border-radius: 10rpx;
}
.card .title{
    display: flex;
    align-items: center;
    border-bottom: 0.5rpx solid rgba(228, 228, 228, 0.651);
    margin: 10rpx;
    padding: 10rpx 10rpx 20rpx;
}

.card .title .mode{
    margin-right: 20rpx;
    padding: 8rpx;
    background-color: #cddff5;
    border-radius: 50rpx;
    color: #689bda;
    font-size: 30rpx;
    font-weight: 700;
}
.card .more{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    margin: 0rpx 20rpx;
    border-bottom: 0.5rpx solid rgba(228, 228, 228, 0.651);
    padding-bottom: 20rpx;
    height: 300rpx;
}
.bottom{
    display: flex;
    justify-content: space-between;
    margin: 20rpx;
    color: #689bda;
}